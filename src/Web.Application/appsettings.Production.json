{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Byndyusoft.Dotnet.Core.Infrastructure.Logging.Serilog.Formatting.RenderedJsonFormatter, Byndyusoft.Dotnet.Core.Infrastructure.Logging.Serilog"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/common-{Date}.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{ServiceName} v{Version}, {LogEventHash} {Level:u3}] {Message}{NewLine}{Exception}{Properties}{NewLine}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/error-{Date}.txt",
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{ServiceName} v{Version}, {LogEventHash} {Level:u3}] {Message}{NewLine}{Exception}{Properties}{NewLine}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/elastic-{Date}.txt",
          "formatter": "Byndyusoft.Dotnet.Core.Infrastructure.Logging.Serilog.Formatting.RenderedJsonFormatter, Byndyusoft.Dotnet.Core.Infrastructure.Logging.Serilog"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "fromEmail": "example@example.com",
          "toEmail": "example@example.com",
          "mailSubject": "Prod.Web.Error",
          "mailServer": "smtp.example.com",
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{ServiceName} v{Version}, {Level:u3}] {Message}{NewLine}{Exception}{Properties}"
        }
      }
    ]
  },

  "ValuesControllerOptions": {
    "Values": [
      "value1_production",
      "value2_production"
    ]
  }
}
